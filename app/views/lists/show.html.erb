<div class="card-category">
  <h1><%= @list.name %></h1>
</div>

<div class="container mt-5">
   <div class="add text-end mb-4">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-flat" %>
  </div>

<% if @bookmarks.any?%>


    <% @bookmarks.each do |bookmark| %>
      <div class="card-movie mt-3 me-2">
        <%= image_tag bookmark.movie.poster_url %>
            <div class="card-movie-infos me-2"></h3>
                <h3 class="me-2"><%= bookmark.movie.title %></h3>
              </div>

            <div class="card-movie-detail">
                <%= bookmark.movie.overview %>
            </diV>

            <div class="comment">
                <p class="fs-6"><%= bookmark.movie.rating %></p>
                <i class="fa-solid fa-star ms-2"></i>
                <%= bookmark.comment %>
              </div>
            </diV>

            <div class="delete-bookmark">
              <%= link_to "delete", bookmark_path(bookmark.id), class:"text-danger", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}%>
            </div>
    <% end %>


  <% else %>
    <p> No Bookmarks yet </p>
  <% end %>

 <div class="mt-3">
    <%= link_to "Back", lists_path, class:"text-decoration-none mb-3"%>
  </div>


</div>
