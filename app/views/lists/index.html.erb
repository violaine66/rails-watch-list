<div class="container">
    <div class="add text-end mt-4">
       <%= link_to "Create a new list", new_list_path, class:"btn btn-flat" %>
    </div>
        <h1 class= mt-3> My lists</h1>

  <div class="card-list mt-3">
     <% @lists.each do |list| %>
    <div class="card"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                 url('<%= list.photo.attached? ? cl_image_path(list.photo.key, height: 300, crop: :fill) : asset_path("list.png") %>')">

      <%= link_to list.name, list_path(list)  %>

    </div>
      <% end %>
  </div>

</div>
