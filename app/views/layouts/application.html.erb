<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-white">
      <div class="navbar">
        <div class="image ms-3">
          <%= link_to root_path do %>
            <%= image_tag "popcorn.png", class:"popcorn" %>
          <% end %>
        </div>
        <div class="menu me-3">
          <%= link_to "My list", lists_path, class:"my-list me-2"%>
          <%= link_to "New list", new_list_path, class:"new-list"%>

        </div>

      </div>


        <%= yield %>

  </body>
</html>
