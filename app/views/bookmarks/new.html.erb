<div class="container">
      <div class="add-movie mt-4">
        <div class="form mt-5">
            <%= simple_form_for [@list, @bookmark] do |f| %>
              <div class="form-group mt-4">
                <%= f.label :movie_id, "Choose a movie"%>
                <%= f.association :movie, collection: Movie.all, label_method: :title, value_method: :id, prompt: "Movies"%>
              </div>

              <div class="form-group mt-3">
                <%= f.label :comment, "Comment"%>
               <%= f.text_field :comment, class: "form-control" %>
              </div>

             <%= f.submit "Add", class: "btn btn-flat mt-2" %>
             <% end %>
          </div>
      </div>
</div>
